<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout" 
    xmlns:u="sap.ui.unified">
    <Dialog id="ItemDialog" title="Add Feedback Item">

        <Panel>
            <content>
                <l:VerticalLayout width="100%">
                    <Label text="Name" required="true"/>
                    <Input type="Text" placeholder="" id="itemName"/>
                    <Label text="Description"/>
                    <Input type="Text" placeholder="" id="itemDescription"/>
                </l:VerticalLayout>
            </content>
        </Panel>
        <buttons>
            <Button text="Save" press="onSaveItem" type="Accept" icon="sap-icon://accept"/>
            <Button text="Cancel" press="onCloseDialogGeneric('ItemDialog')" type="Reject" icon="sap-icon://sys-cancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>