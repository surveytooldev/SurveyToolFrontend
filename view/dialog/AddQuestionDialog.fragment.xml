<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout" 
    xmlns:u="sap.ui.unified">
    <Dialog id="AddQuestionDialog" title="">

        <Panel>
            <content>
                <l:VerticalLayout width="100%">
                    <Label text="Content"/>
                    <Input type="Text" placeholder="" id="questionContent"/>
                </l:VerticalLayout>
            </content>
        </Panel>
        <buttons>
            <Button text="Save" press="onSaveQuestion" type="Accept" icon="sap-icon://accept"/>
            <Button text="Cancel" press="onCloseDialogGeneric('AddQuestionDialog')" type="Reject" icon="sap-icon://sys-cancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>