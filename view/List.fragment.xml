<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog id="List"
      title="LoBs">
    <SelectList id="lobList" headerText="All LoBs" items="{
			path: 'lobs>/lobs',
			sorter: {
				path: 'Name'
			}
		}">
        	<core:Item key="{lobs>name}" text="{lobs>name}" />
    </SelectList>
    <buttons>
            <Button text="Add" press="onAddLob"/>
            <Button text="Delete" press="onDeleteLob"/>
            <Button text="Close" press="onCloseDialogGeneric('List')" type="Reject" icon="sap-icon://sys-cancel"/>
        </buttons>
   </Dialog>
</core:FragmentDefinition>