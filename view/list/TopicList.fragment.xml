<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog id="TopicList"
      title="Topics">
    <SelectList id="topicList" items="{
			path: 'topics>/topics',
			sorter: {
				path: 'Name'
			}
		}">
        	<core:Item key="{topics>name}" text="{topics>name}" />
    </SelectList>
    <buttons>
            <Button text="Add" press="onAddTopic"/>
            <Button text="Delete" press="onDeleteTopic"/>
            <Button text="Close" press="onCloseDialogGeneric('TopicList')" type="Reject" icon="sap-icon://sys-cancel"/>
        </buttons>
   </Dialog>
</core:FragmentDefinition>