<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog id="ServiceList"
      title="Services">
    <SelectList id="serviceList" headerText="All Services" items="{
			path: 'services>/services',
			sorter: {
				path: 'Name'
			}
		}">
        	<core:Item key="{services>name}" text="{services>name}" />
    </SelectList>
    <buttons>
            <Button text="Add" press="onAddService"/>
            <Button text="Delete" press="onDeleteService"/>
            <Button text="Close" press="onCloseDialogGeneric('ServiceList')" type="Reject" icon="sap-icon://sys-cancel"/>
        </buttons>
   </Dialog>
</core:FragmentDefinition>