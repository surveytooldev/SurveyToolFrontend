<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout" 
    xmlns:u="sap.ui.unified">
    <Dialog id="loginDialog" title="Login Required To Continue">

        <Panel>
            <content>
                <l:VerticalLayout width="100%">
                    <Label text="Username" required="true"/>
                    <Input type="Text"  id="username" required="true"/>
                    <Label text="Password" required="true"/>
                    <Input type="Password" id="password"/>
                </l:VerticalLayout>
            </content>
        </Panel>
        <buttons>
            <Button text="Register" press="onRegisterPressed" type="Emphasized"/>
            <Button text="Login" press="onLoginPressed" type="Accept" icon="sap-icon://accept"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>