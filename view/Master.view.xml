<mvc:View
	controllerName="sap.surveytool.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Feedback"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<Button id="lobButton" text="View LoBs" press=".onViewList('list/lob/', 'lobs', 'list.LobList', 'LobList')"/>
					<Button id="statusButton" text="View Statuses" press=".onViewList('list/status/', 'status', 'list.StatusList', 'StatusList')"/>
					<Button id="serviceButton" text="View Service Areas" press=".onViewList('list/service/', 'services', 'list.ServiceList', 'ServiceList')"/>
					<Button id="topicButton" text="View Topics" press=".onViewList('list/topic/', 'topics', 'list.TopicList', 'TopicList')"/>
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
					<OverflowToolbarButton id="addButton" icon="sap-icon://add" text="Add" type="Transparent" press=".onOpenDialogGeneric('ActionItemDialog', 'ActionItemDialog')"/>
					<OverflowToolbarButton icon="sap-icon://visits" text="Logout" press=".onLogout"/>
				</OverflowToolbar>
				<List id="list" items="{/actionitems}">
				<items>
									<ObjectListItem type="Navigation" title="{description}" press=".onRowPress" >
									<attributes>
									<ObjectAttribute text="{aID}" />
									</attributes>
									</ObjectListItem>
									</items>
								</List>
			</VBox>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>