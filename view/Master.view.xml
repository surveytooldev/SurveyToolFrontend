<mvc:View
	controllerName="sap.surveytool.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Feedback"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<Button text="View LoBs" press=".onViewLob"/>
					<Button text="View Statuses" press="onViewStatus"/>
					<Button text="View Service Areas" press="onViewService"/>
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
					<OverflowToolbarButton icon="sap-icon://add" text="Add" type="Transparent" press=".onOpenDialog"/>
				</OverflowToolbar>
				<List id="list" items="{/actionitems}">
				<items>
									<ObjectListItem type="Navigation" title="{description}" press=".onRowPress" >
									<attributes>
									<ObjectAttribute text="{aID}" />
									</attributes>
									</ObjectListItem>
									</items>
								</List>
			</VBox>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>